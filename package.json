{
  "name": "@zs-/no-js",
  "version": "0.0.1",
  "description": "A 0bdx front-end snippet which removes the `zs-no-js` class from the `<HTML>` element if JavaScript is running.",
  "type": "module",
  "files": [
    "zs-no-js.d.ts",
    "zs-no-js.js"
  ],
  "engines": {
    "node": ">= 14.0.0"
  },
  "main": "zs-no-js.js",
  "scripts": {
    "build:prod": "rollup -c",
    "build:types": "tsc zs-no-js.js --allowJs --declaration --emitDeclarationOnly",
    "build": "for s in {prod,types};do npm run build:$s;done",
    "preflight:test": "echo \"ðŸ§¬ test.js\" && node test.js",
    "preflight:types": "tsc zs-no-js.js --allowJs --checkJs --noEmit",
    "preflight": "for s in {test,types};do npm run preflight:$s;done",
    "test": "echo \"ðŸ§ª src/test.js\" && node src/test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0bdx/zs-no-js.git"
  },
  "keywords": [
    "noscript"
  ],
  "author": "0bdx <0@0bdx.com> (0bdx.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0bdx/zs-no-js/issues"
  },
  "homepage": "https://github.com/0bdx/zs-no-js#readme",
  "types": "./zs-no-js.d.ts",
  "devDependencies": {
    "@0bdx/build-helpers": "^0.0.4",
    "rollup": "^3.25.0"
  }
}
